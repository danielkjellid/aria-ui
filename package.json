    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": "^4.5.2",
    "vue": "^3.2.23",
    "vue-loader": "^16.8.3"
  },
