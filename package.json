    "@storybook/vue3": "^6.4.0",
    "@tailwindcss/forms": "^0.3.4",
    "@vue/compiler-sfc": "^3.2.23",
    "babel-loader": "^8.2.3",
    "prettier": "2.5.1",
    "rollup": "^2.60.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
