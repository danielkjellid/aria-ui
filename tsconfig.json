{
  "compilerOptions": {
    "moduleResolution": "node",
    "declarationDir": "dist/",
    "target": "es2019",
    "module": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "static/images"]
  },
  "include": ["src/**/**/*.ts", "src/**/**/*.vue", "static/images/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
